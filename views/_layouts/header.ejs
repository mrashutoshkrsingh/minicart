<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>MiniCart</title>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.1.20/jquery.fancybox.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/style.css" />        


</head>

  <body >

  <nav class="navbar navbar-inverse">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">MiniCart</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      
        <li class="dropdown">
          <a href="/products" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Categories<span class="caret"></span></a>
          <ul class="dropdown-menu">
          <% categories.forEach(function(c){ %>
          <li><a href="/products/<%= c.slug %>"><%= c.title %></a></li>
      <% }); %>
      <li role="separator" class="divider"></li>
            <li><a href="/products">All Products</a></li>
          </ul>
          
        </li>
        <% pages.forEach(function(page){ %>
            <% if (page.slug !="home") { %>
            <li><a href="/<%= page.slug %>"><%= page.title %></a></li>
            <% } %>
            <% }); %>
      </ul>
      
      <ul class="nav navbar-nav navbar-right">
      <li>
      <% if (user) { %>
      <a href="/cart/checkout">My Cart (
          <% if (typeof cart !== "undefined") { %>
          <%= cart.length %>
          <% } else {%>
          0
          <% } %>
      )</a>
      <% } %>
  </li>
        <!--<li><a href="#">Link</a></li>-->
        
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><% if (user) { %>
          Hi, <%= user.username  %><%}%><span class="caret"></span></a>
          <ul class="dropdown-menu">
          <% if (!user) { %>
            <li><a href="/users/login">Log In</a></li>
            <li><a href="/users/register">Sign Up</a></li>
            <% } else {%>
            <li><a href="/users/logout">Log out</a></li>
            <% }%>
          </ul>
        </li>
        <% if (user && user.admin == 1) { %>
                        <li><a href="/admin/pages" target="_blank">Admin Area</a></li>
                        <% }%>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container" style="padding-top: 40px;">
<%- messages('messages', locals) %>
<% if (errors) {%>
    <% errors.forEach(function(error) { %>
    <div class="alert alert-danger">
        <%= error.msg %>
    </div>
    <% });%>
<% }%>